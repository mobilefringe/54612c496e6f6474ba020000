<script>
    $(document).ready(function() {
        loadMallDataCached(renderPageData);
        $(".scroll").click(function(e) {
            e.preventDefault();
            $('html,body').animate( { scrollTop:$(this.hash).offset().top-120 } , 500);
        });
    });
    
    
    function renderPageData(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        prefix = get_prefix();
        load_json(prefix+"/pages/londonderry-leasing.json", "#leasing_information");
        load_json(prefix+"/pages/londonderry-accessibility.json", "#accessibility");
        load_json(prefix+"/pages/londonderry-mall-info.json", "#mall_info");
        load_json(prefix+"/pages/londonderry-community-wifi.json", "#wifi");
        load_json(prefix+"/pages/londonderry-contact-us.json", "#contact_us");
        
        $('#loading').hide();
        $('#page_content').fadeIn();
    }
    
    
    function load_json(json, container){
        $.getJSON(json).done(function(data) {
            if(sessionStorage.current_locale == "en-CA"){
                $(container).html(data.body);
            }else{
                $(container).html(data.body_2);
            }
        })
    }


    jQuery(window).scroll(function(){ 
        var navHeight = $('nav').height();
        var windowTop = $(window).scrollTop() - navHeight; 
        var sidebarHeight = $('#sidebar').height();
        var contentHeight = $('#right-content').height();
        if(sidebarHeight + windowTop < contentHeight){
            if ($(window).scrollTop() > 140) {
                jQuery('#sidebar').css('top',windowTop); 
            }else{
                jQuery('#sidebar').css('top',0);
            }
        }
  
    });
</script>        
