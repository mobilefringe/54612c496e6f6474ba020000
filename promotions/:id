<script>


    $(document).ready(function() {
        
        function renderPageData(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            var promotion_details = getPromotionDetailsBySlug(slug);
            checkErrorPage(promotion_details);
            renderPromotionDetails('#promotion_details_id', '#promotion_details_template',promotion_details);
            renderStoresWithPromotionsTemplate('#store_item_template','#stores_with_promotions');
            $('#loading').hide();
            $('#page_content').fadeIn('fast');
            
            
             $.ajax({
                url : "/web_pages/update_dynamic_page_meta_data",
                type: "POST",
                data : {authenticity_token: '<%=form_authenticity_token%>' ,
                        web_page_id: '<%=web_page_id%>', path:window.location.pathname,
                        meta_lang:'EN',
                        meta_title:"Londonderry Mall | " + promotion_details.name,
                        meta_description:   promotion_details.name + promotion_details.description,
                        meta_keywords:''
                        
                        
                },
                success: function(data, textStatus, jqXHR)
                {
                    
                },
                error: function (jqXHR, textStatus, errorThrown)
                {
                    
                }
            });
        
        }
        
        loadMallData(renderPageData);
    });

</script>